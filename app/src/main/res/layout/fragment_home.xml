<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/greenhouseGasCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/white"
                android:outlineSpotShadowColor="@color/blue"
                app:cardCornerRadius="8dp"
                app:cardElevation="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@android:color/transparent">

                <TextView
                    android:id="@+id/greenhouseGasTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Greenhouse Gas Reduction:"
                    android:padding="16dp"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/energySavingsCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/white"
                android:outlineSpotShadowColor="@color/blue"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="@+id/greenhouseGasCardView"
                app:layout_constraintStart_toStartOf="@+id/greenhouseGasCardView"
                app:layout_constraintTop_toBottomOf="@id/greenhouseGasCardView"
                app:strokeColor="@android:color/transparent">

                <TextView
                    android:id="@+id/energySavingsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Energy Savings: "
                    android:padding="16dp"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/airPollutionCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="@color/white"
                android:outlineSpotShadowColor="@color/blue"
                app:cardCornerRadius="8dp"
                app:cardElevation="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/energySavingsCardView"
                app:layout_constraintStart_toStartOf="@+id/energySavingsCardView"
                app:layout_constraintTop_toBottomOf="@id/energySavingsCardView"
                app:strokeColor="@android:color/transparent">

                <TextView
                    android:id="@+id/airPollutionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Air Pollution Reduction:"
                    android:padding="16dp"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>